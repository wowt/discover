<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hongcheng.fruitmall.mall.dao.mapper.LevelRuleEntityMapper">
    <sql id="Base_column_List">
        id,level,maxScore,describe
    </sql>
    <insert id="insert">
        INSERT INTo level_rule
        (level,maxScore,describe)
        VALUES
        (#{level},#{maxScore},#{describe})
    </insert>
    <select id="getAll" resultType="com.hongcheng.fruitmall.mall.entity.LevelRuleEntity">
        SELECT
        <include refid="Base_column_List"/>
        FROM level_rule
    </select>
    <update id="update">
        UPDATE level_rule
        <set>
            <if test="level != null">
                level=#{level},
            </if>
            <if test="maxScore != null">
                maxScore=#{maxScore},
            </if>
            <if test="describe != null">
                describe=#{describe},
            </if>
        </set>
        WHERE id=#{id}
    </update>


</mapper>